{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018", "DOM", "ESNext"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  }
}